version: '3.8'

services:
  nginx:
    build: .
    container_name: opexwise-ui
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf
      - ./default.conf:/etc/nginx/conf.d/default.conf
      - ./path/to/your/certs:/etc/nginx/certs
      - /var/log/nginx:/var/log/nginx  # Map logs directory for persistence
